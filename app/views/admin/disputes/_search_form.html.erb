<%= form_for :search, method: :get, html: { class: 'form-horizontal' } do |f| %>

    <div class="form-group">
        <%= f.label :domain, class: 'col-sm-2 control-label', for: nil %>

        <div class="col-sm-4">
            <%= f.text_field :domain_name, placeholder: 'example.com, example', class: 'form-control' %>
        </div>
    </div>

    <div class="form-group">
        <%= f.label nil, Dispute.human_attribute_name(:expire_date), class: 'col-sm-2 control-label', for: nil %>

        <div class="col-sm-3">
            <%= t '.expire_date_start' %>
            <%= f.text_field :expire_date_start, class: 'form-control datepicker', style: 'display: inline-block; width: 125px;' %>
        </div>

        <div class="col-sm-3">
            <%= t '.expire_date_end' %>
            <%= f.text_field :expire_date_end, class: 'form-control datepicker', style: 'display: inline-block; width: 125px;' %>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-4">
            <%= f.submit t('.btn_search'), class: 'btn btn-primary', name: nil %>
            <%= link_to t('.btn_reset'), admin_disputes_path, class: 'btn btn-default' %>
        </div>
    </div>

<% end %>
