- content_for :actions do
  = link_to(t(:back), admin_reports_path, class: "btn btn-default")
= render "shared/title", name: params[:ai].present? ? t(".ai_report") : t(".title")

- if params[:ai].present?
  = render "admin/reports/partials/ai_form", url: admin_reports_path, method: :post
- else  
  = render "admin/reports/partials/form", url: admin_reports_path, method: :post