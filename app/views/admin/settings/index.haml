        %thead
          %tr
            %th{class: 'col-xs-6'}= t(:setting)
            %th{class: 'col-xs-6'}= t(:value)
        %tbody
          = render 'setting_row', var: :invoice_number_min
          = render 'setting_row', var: :invoice_number_max
