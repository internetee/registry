.panel.panel-default
  .panel-heading
    %h3.panel-title= t(:general)
  .panel-body
    %dl.dl-horizontal
      %dt= t(:id)
      %dd= @contact.id

      %dt= t(:authinfo_pw)
      %dd
        = text_field_tag :password, @contact.password, readonly: true, class: 'partially-hidden'

      %br

      %dt= t(:ident)
      %dd= ident_for(@contact)

      %dt= t(:email)
      %dd= @contact.email

      %dt= t(:phone)
      %dd= @contact.phone
